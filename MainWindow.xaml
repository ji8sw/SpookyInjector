<Window x:Class="SpookyInjector.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpookyInjector"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Baker Injector" Height="300" Width="300"
        Icon="BakerLogoTBG.png">
    <Grid Background="#262626">
        <!-- Title -->
        <TextBlock FontWeight="Bold" FontSize="20" Foreground="White" 
                   HorizontalAlignment="Center" VerticalAlignment="Top" 
                   Margin="0,10,0,0">
            Baker Injector
        </TextBlock>

        <!-- Inject -->
        <Button Width="100" Height="40" Content="Inject" 
                Background="#363636" Foreground="White" 
                Click="InjectButton_Click"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Open Baker Folder -->
        <Button Width="70" Height="30" Content="Baker Folder" 
                Background="#363636" Foreground="White" 
                Click="FolderOpen_Click"
                HorizontalAlignment="Center" VerticalAlignment="Top" 
                Margin="0,175,0,0"
                FontSize="10">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>

        <!-- Auto Inject Toggle -->
        <Button Width="70" Height="30" Content="Auto Inject" 
                Background="#363636" Foreground="White" 
                Click="ToggleAutoInject_Click"
                HorizontalAlignment="Center" VerticalAlignment="Top" 
                Margin="0,218,0,0"
                FontSize="10"
                Name="ToggleAutoInject">
            <Button.Template>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="1"
                            CornerRadius="4">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Button.Template>
        </Button>
    </Grid>
</Window>
